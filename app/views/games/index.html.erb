<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @game, url: games_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :player1_name %>
          <%= form.text_field :player1_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :player2_name %>
          <%= form.text_field :player2_name, class: "form-control" %>
        </div>

        <%= form.submit "Start Game", class: "btn btn-primary" %>
      <% end %>

      <% if @game.persisted? %>
        <h2>Current Turn: <%= @game.current_player %></h2>
        <%= render partial: 'board', locals: { game: @game } %>
      <% end %>
    </div>
  </div>
</div>
